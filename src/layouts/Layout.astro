---
import '../styles/global.css';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { SITE } from '../data/site';

interface Props {
  title?: string;
  description?: string;
}

const { title = SITE.title, description = SITE.description } = Astro.props;

// Get Langflow URL from environment variable (defaults to localhost for development)
const langflowUrl = import.meta.env.PUBLIC_LANGFLOW_URL || 'http://localhost:7860';
// Get flow ID from environment variable (with fallback to current hardcoded ID)
const flowId = import.meta.env.PUBLIC_LANGFLOW_FLOW_ID || '4f2f5788-d593-4480-b869-3bd78f25c236';
---

<!doctype html>
<html lang="en" class="scroll-smooth">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/katex@0.16.9/dist/katex.min.css"
      integrity="sha384-n8MVd4RsNIU0tAv4ct0nTaAbDJwPJzDEaqSD1odI+WdtXRGWt2kTvGFasHpSy3SV"
      crossorigin="anonymous"
    />
    <script
      is:inline
      src="https://cdn.jsdelivr.net/gh/logspace-ai/langflow-embedded-chat@v1.0.7/dist/build/static/js/bundle.min.js"
    ></script>
  </head>
  <body class="min-h-screen flex flex-col">
    <Header />
    <main class="flex-grow">
      <slot />
    </main>
    <Footer />
    <langflow-chat
      window_title="Document Q&A"
      flow_id={flowId}
      host_url={langflowUrl}
      chat_position="top-left"
      chat_window_style='{"right": "20px", "bottom": "100px", "width": "380px", "maxHeight": "600px"}'
    ></langflow-chat>
  </body>
</html>

