---
import { getCollection, render } from 'astro:content';
import Layout from '../../layouts/Layout.astro';
import { formatDateLong } from '../../utils/date';
import ViewAsMarkdown from '../../components/ViewAsMarkdown';
import EditLink from '../../components/EditLink.astro';
import { getBlogPostRawMarkdown } from '../../utils/markdown-generator';
import { SITE, BIOGRAPHY } from '../../data/site';
import {
  generateBlogPostingSchema,
  generateArticleSchema,
} from '../../utils/schema';
import TableOfContents from '../../components/TableOfContents';
import { calculateReadingTime, formatReadingTime } from '../../utils/reading-time';
import { readBlogPostFile, extractMarkdownContent } from '../../utils/content-reader';
import { METADATA_SEPARATOR } from '../../utils/constants';

const slug = Astro.params.slug;
if (!slug) {
  return Astro.redirect('/404', 404);
}

const blogPosts = await getCollection('blog');
const post = blogPosts.find((p) => p.id === slug);

if (!post) {
  return Astro.redirect('/404', 404);
}

const { Content } = await render(post);
const postMarkdown = await getBlogPostRawMarkdown(post);

// Calculate reading time
let readingTime: number | undefined;
try {
  const fileContent = await readBlogPostFile(post.id);
  const markdownContent = extractMarkdownContent(fileContent);
  readingTime = calculateReadingTime(markdownContent);
} catch (error) {
  // If we can't read the file, skip reading time
  readingTime = undefined;
}

const postUrl = `${SITE.url}/post/${slug}`;
const postImage = post.data.image
  ? `${SITE.url}${post.data.image}`
  : `${SITE.url}/images/avatar.jpg`;

const blogPostingSchema = generateBlogPostingSchema(post, postUrl, postImage);
const articleSchema = generateArticleSchema(post, postUrl, postImage);

// Generate GitHub edit URL
const githubEditUrl = `https://github.com/${SITE.github.owner}/${SITE.github.repo}/edit/${SITE.github.branch}/src/content/blog/${slug}.md`;
---

<Layout 
  title={`${post.data.title} | Daniel Fridljand`}
  description={post.data.description || SITE.description}
  image={postImage}
  type="article"
  url={postUrl}
>
  {/* AI discoverability: JSON-LD structured data for BlogPosting */}
  <script type="application/ld+json" set:html={JSON.stringify(blogPostingSchema)} />
  
  {/* AI discoverability: JSON-LD structured data for Article (alternative schema) */}
  <script type="application/ld+json" set:html={JSON.stringify(articleSchema)} />
  
  {/* AI discoverability: Article-specific meta tags */}
  <meta property="article:published_time" content={post.data.pubDate.toISOString()} />
  {post.data.updatedDate && (
    <meta property="article:modified_time" content={post.data.updatedDate.toISOString()} />
  )}
  <meta property="article:author" content={BIOGRAPHY.name} />
  {post.data.tags && post.data.tags.map((tag) => (
    <meta property="article:tag" content={tag} />
  ))}
  
  <article class="py-16 bg-surface">
    <div class="container mx-auto px-4">
      <div class="max-w-7xl mx-auto">
        {/* Header - full width */}
        <header class="mb-8 max-w-4xl mx-auto">
          <div class="flex flex-wrap gap-2 mb-4 items-center justify-between">
            <div class="flex flex-wrap gap-2">
              {post.data.tags.map((tag) => (
                <span
                  class="px-3 py-1 bg-surface-elevated rounded-full text-sm text-body"
                >
                  {tag}
                </span>
              ))}
            </div>
            <div class="flex flex-col gap-2">
              <ViewAsMarkdown client:load href={`/post/${slug}.md`} />
              <EditLink editUrl={githubEditUrl} />
            </div>
          </div>
          <h1 class="text-4xl font-bold mb-4 text-heading">
            {post.data.title}
          </h1>
          {/* AI discoverability: Semantic time element with datetime attribute */}
          <div class="text-muted flex items-center gap-1.5 flex-wrap">
            <time datetime={post.data.pubDate.toISOString()}>
              {formatDateLong(post.data.pubDate)}
            </time>
            {readingTime && (
              <>
                <span class="mx-2">{METADATA_SEPARATOR}</span>
                <span class="inline-flex items-center gap-1">
                  <svg
                    class="w-3.5 h-3.5"
                    fill="none"
                    stroke="currentColor"
                    viewBox="0 0 24 24"
                    aria-hidden="true"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="2"
                      d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"
                    />
                  </svg>
                  {formatReadingTime(readingTime)}
                </span>
              </>
            )}
          </div>
        </header>
        
        {post.data.image && (
          <div class="max-w-4xl mx-auto mb-8">
            <img
              src={post.data.image}
              alt={post.data.title}
              class="w-full rounded-lg"
            />
          </div>
        )}
        
        {/* Two-column layout: content + TOC sidebar */}
        <div class="flex flex-col lg:flex-row gap-8 items-start">
          {/* Spacer to center content on desktop */}
          <div class="hidden lg:block w-64 flex-shrink-0"></div>
          
          {/* Main content - centered with max-width */}
          <div class="flex-1 max-w-4xl mx-auto lg:mx-0">
            <div class="prose prose-lg dark:prose-invert max-w-none">
              <Content />
            </div>
          </div>
          
          {/* Table of Contents sidebar */}
          <aside class="hidden lg:block w-64 flex-shrink-0">
            <TableOfContents client:load />
          </aside>
        </div>
      </div>
    </div>
  </article>
</Layout>

