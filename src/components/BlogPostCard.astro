---
interface Props {
  title: string;
  description?: string;
  pubDate: Date;
  slug: string;
  image?: string;
  tags?: string[];
}

const { title, description, pubDate, slug, image, tags = [] } = Astro.props;

function formatDate(date: Date): string {
  return date.toLocaleDateString('en-US', {
    year: 'numeric',
    month: 'short',
    day: 'numeric',
  });
}
---

<a
  href={`/post/${slug}`}
  class="block bg-surface rounded-lg shadow-sm border border-surface hover:shadow-md transition-shadow overflow-hidden group"
>
  {image && (
    <img
      src={image}
      alt={title}
      class="w-full h-48 object-cover group-hover:scale-105 transition-transform duration-300"
    />
  )}
  <div class="p-6">
    <div class="flex items-center gap-2 mb-2">
      {tags.map((tag) => (
        <span
          class="px-2 py-1 text-xs bg-surface-elevated rounded text-muted"
        >
          {tag}
        </span>
      ))}
    </div>
    <h3 class="text-xl font-semibold mb-2 text-heading group-hover:text-link transition-colors">
      {title}
    </h3>
    {description && (
      <p class="text-muted mb-4 line-clamp-2">
        {description}
      </p>
    )}
    <time class="text-sm text-subtle">
      {formatDate(pubDate)}
    </time>
  </div>
</a>

