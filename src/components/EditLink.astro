---
interface Props {
  editUrl: string;
  label?: string;
}

const { editUrl, label = 'Suggest changes on GitHub' } = Astro.props;
---

{editUrl && (
  <a
    href={editUrl}
    title={label}
    class="inline-flex items-center gap-2 text-sm text-muted hover:text-link transition-colors"
    aria-label={label}
    target="_blank"
    rel="noopener noreferrer"
  >
    <span class="inline-block" aria-hidden="true">✏️</span>
    {label}
  </a>
)}

