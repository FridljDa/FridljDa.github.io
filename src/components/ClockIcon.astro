---
interface Props {
  className?: string;
  ariaLabel?: string;
  /** When true, hides the icon from screen readers by setting aria-hidden="true". When false or undefined, aria-hidden is omitted and the icon is accessible with aria-label and role. */
  ariaHidden?: boolean;
}

const { 
  className = "w-3.5 h-3.5",
  ariaLabel = "Reading time indicator",
  ariaHidden
} = Astro.props;
---

<svg
  class={className}
  fill="none"
  stroke="currentColor"
  viewBox="0 0 24 24"
  aria-label={ariaHidden ? undefined : ariaLabel}
  aria-hidden={ariaHidden ? "true" : undefined}
  role={ariaHidden ? undefined : "img"}
>
  <path
    stroke-linecap="round"
    stroke-linejoin="round"
    stroke-width="2"
    d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"
  />
</svg>

