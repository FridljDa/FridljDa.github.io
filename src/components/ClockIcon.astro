---
interface Props {
  class?: string;
  ariaLabel?: string;
  ariaHidden?: boolean;
}

const { class: className = 'w-3.5 h-3.5', ariaLabel, ariaHidden = !ariaLabel } = Astro.props;
const role = ariaLabel ? 'img' : undefined;
---

<svg
  class={className}
  fill="none"
  stroke="currentColor"
  viewBox="0 0 24 24"
  aria-label={ariaLabel}
  aria-hidden={ariaHidden}
  role={role}
>
  <path
    stroke-linecap="round"
    stroke-linejoin="round"
    stroke-width="2"
    d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 0 0118 0z"
  />
</svg>
