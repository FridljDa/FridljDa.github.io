---
interface Props {
  class?: string;
  ariaLabel?: string;
  ariaHidden?: boolean;
}

const { class: className = 'w-3.5 h-3.5', ariaLabel, ariaHidden = !ariaLabel } = Astro.props;
// When an aria-label is provided, the icon should be exposed to screen readers with role='img'
// When aria-hidden is true, we hide the icon from screen readers (no label or role needed)
const role = ariaLabel && !ariaHidden ? 'img' : undefined;
const shouldShowLabel = ariaLabel && !ariaHidden;
---

<svg
  class={className}
  fill="none"
  stroke="currentColor"
  viewBox="0 0 24 24"
  aria-label={shouldShowLabel ? ariaLabel : undefined}
  aria-hidden={ariaHidden}
  role={role}
>
  <path
    stroke-linecap="round"
    stroke-linejoin="round"
    stroke-width="2"
    d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 0 0118 0z"
  />
</svg>
